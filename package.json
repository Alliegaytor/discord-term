{
    "name": "discord-term-ng",
    "version": "1.5.2",
    "description": "Extensible Discord terminal client",
    "exports": "./dist/index.js",
    "scripts": {
        "build": "tsc -skipLibCheck true",
        "start": "npm run build && node dist/index.js",
        "prepublish": "tsc",
        "test": "test/run_tests.sh",
        "lint": "eslint .",
        "dev": "npm run build && nodemon -I"
    },
    "nodemonConfig": { "ext": "ts", "ignore": ["*.test.ts", "db/*"], "delay": "2" },
    "keywords": [
        "discord",
        "discord-terminal",
        "discord-client",
        "discord-bot",
        "discordjs",
        "typescript",
        "blessed"
    ],
    "homepage": "https://gitlab.com/P-90-For-Retail/discord-term",
    "author": "Allison <alyway@protonmail.com>",
    "license": "ISC",
    "repository": {
        "type": "git",
        "url": "https://gitlab.com/P-90-For-Retail/discord-term"
    },
    "dependencies": {
        "blessed": "^0.1.81",
        "chalk": "^5.2.0",
        "clipboardy": "^3.0.0",
        "discord.js": "^14.9.0",
        "fs-extra": "^11.1.1",
        "string-width": "^5.1.2"
    },
    "devDependencies": {
        "@types/blessed": "^0.1.21",
        "@types/fs-extra": "^11.0.1",
        "@types/jest": "^29.5.0",
        "@types/node": "^18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.57.1",
        "@typescript-eslint/parser": "^5.57.1",
        "eslint": "^8.38.0",
        "jest": "^29.5.0",
        "nodemon": "^2.0.22",
        "ts-jest": "^29.1.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.0.4"
    },
    "files": [
        "dist/*.js",
        "dist/*/*.js",
        "themes"
    ],
    "bin": {
        "dterm": "dist/index.js"
    },
    "type": "module",
    "engines": {
        "node": ">=16.9.0"
    }
}
